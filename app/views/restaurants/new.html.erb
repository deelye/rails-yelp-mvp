<h1>Add restaurant</h1>
<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, label: "Cuisine" %>
  <%= f.submit "Submit restaurant", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back", restaurants_path %>
